{
  "kind": "collectionType",
  "collectionName": "quests",
  "info": {
    "singularName": "quest",
    "pluralName": "quests",
    "displayName": "Квесты",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "disabled": {
      "type": "boolean",
      "required": false,
      "default": false
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "quote": {
      "type": "string"
    },
    "lore": {
      "type": "text"
    },
    "statistics": {
      "type": "component",
      "component": "stats.quest-statistics",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "timelines": {
      "type": "component",
      "component": "scheduling.timeline",
      "repeatable": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "requirements": {
      "type": "component",
      "repeatable": true,
      "component": "requirements.requirements"
    },
    "widgetLink": {
      "type": "string",
      "required": false
    }
  }
}
